{
  "manifest_version": 2,
  "name": "SSASy",
  "version": "0.0.1",
  "description": "A browser extension for the self-sovereign authentication scheme",
  "icons": {
    "16": "icons/icon-16x16.png",
    "32": "icons/icon-32x32.png",
    "96": "icons/icon-96x96.png",
    "384": "icons/icon-384x384.png",
    "512": "icons/icon-512x512.png"
  },
  "browser_action": {
    "default_title": "SSASy",
    "default_popup": "index.html",
    "default_icon": "icons/icon-96x96.png"
  },
  "permissions": [
    "storage",
    "unlimitedStorage",
    "activeTab",
    "clipboardWrite"
  ],
  "background": {
    "page": "index.html",
    "persistent": true
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+Shift+Y",
        "mac": "Alt+Shift+Y",
        "linux": "Alt+Shift+Y",
        "windows": "Alt+Shift+Y"
      },
      "description": "Open SSASy"
    }
  }
}